<!DOCTYPE html>
<html>
  <head>
    <title>Add book to <%=shopData.shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <style>
      .error-message {
        color: red;
      }
    </style>
  </head>
  <body>
    <h1><%=shopData.shopName%>: Add book</h1>
    <form method="POST" action="bookadded">
      <% if (errors.length > 0) { %>
      <ul>
        <% errors.forEach(function(error) { %>
        <li class="error-message"><%= error.msg %></li>
        <% }); %>
      </ul>
      <% } %>
      <p>Book name: <input id="name" type="text" name="name" value="" /></p>
      <p>Price: <input id="price" type="text" name="price" value="" /></p>
      <input type="submit" value="Add Book" />
    </form>
  </body>
</html>
